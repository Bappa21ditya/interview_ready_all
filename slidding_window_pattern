#include <bits/stdc++.h>
using namespace std;
//  7, nums = [2,3,1,2,4,3]
int max_sum(int a[],int n,int k)
{
    int i=0,sum=0,mx=0;
    int j=0;
    while(j<n)
    {
        sum+=a[j];
        if(sum<k)
        {                                // 1 1 1 4     6
          j++;                           // 2 4 1 2     6
          
        }
        else if(sum==k)
        {
            if(j-i+1>mx)
              mx=j-i+1;
              
            j++;  
        }
        else if(sum>k)
        {
            while(sum>k)
            {
              sum=sum-a[i];
              i++;
                if(sum==k)
                {
                  if(j-i+1>mx)
                     mx=j-i+1;
                }
            }
            
            j++;
        }
    }
    return mx;
}
int main()
{
  int n=6;
  int a[n]={2,3,1,2,4,3};
  int k=7;
  cout<<max_sum(a,n,k)<<endl; 
}
