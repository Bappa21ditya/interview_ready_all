1.max_subarray_of_size_k
#include <bits/stdc++.h>
using namespace std;
int main()
{
    
 int a[]={1, 4, 2, 10, 23, 3, 1, 0, 20};
 int n=9;
 int i=0,j=0;
 int maxi=0;
 int sum=0;
 int k=4;
 while(j<n)
 {
     sum+=a[j];
     if(j-i+1<k)
     {
         j++;
     }
     else if(j-i+1==k)
     {
       maxi=max(sum,maxi);
       sum-=a[i];
       i++;
       j++;
     }
 }
  cout<<maxi<<endl;

}

